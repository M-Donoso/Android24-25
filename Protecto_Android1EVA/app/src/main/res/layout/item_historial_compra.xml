<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Imagen de la camiseta -->
        <ImageView
            android:id="@+id/ivCamisetaImage"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:layout_marginBottom="12dp" />

        <!-- Nombre del producto -->
        <TextView
            android:id="@+id/tvProducto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del Producto"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:textColor="@android:color/black" />

        <!-- Descripción del producto -->
        <TextView
            android:id="@+id/tvDescripcionCamiseta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descripción de la camiseta"
            android:textSize="14sp"
            android:layout_marginBottom="8dp"
            android:textColor="@android:color/darker_gray" />

        <!-- Liga y equipo -->
        <TextView
            android:id="@+id/tvEquipoLiga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Equipo - Liga"
            android:textSize="14sp"
            android:layout_marginBottom="8dp"
            android:textColor="@android:color/black" />

        <!-- Fecha de la compra -->
        <TextView
            android:id="@+id/tvFecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha de Compra"
            android:textSize="12sp"
            android:layout_marginBottom="8dp"
            android:textColor="@android:color/darker_gray" />

        <!-- Precio total -->
        <TextView
            android:id="@+id/tvTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total: $99.99"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/dark_orange" />

    </LinearLayout>
</androidx.cardview.widget.CardView>


